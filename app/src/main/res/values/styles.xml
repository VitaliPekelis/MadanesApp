<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>


    <!--ActivityStyles-->
    <style name="AppTheme.IdentityActivity">
        <!--Overide Here for MainActivity style-->
        <!--<item name="colorPrimaryDark">#546</item>-->
        <!--<item name="android:textColorPrimary">#163</item>-->
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.SplashActivity" parent="@style/FullscreenActivity">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!--FullscreenActivity-->
    <style name="FullscreenActivity" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--NoActionBar-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!--<style name="MyApp.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
